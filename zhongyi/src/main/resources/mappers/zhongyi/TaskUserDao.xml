<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.framework.loippi.dao.TaskUserDao">
	
	<resultMap id="TaskUserResultMap" type="com.framework.loippi.entity.TaskUser">
		<id property="id" column="id"  />
		<result property="taskId" column="task_id" />
		<result property="userId" column="user_id" />
		<result property="status" column="status" />
		<result property="createDate" column="create_date" />
		<result property="value" column="value" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 id ,task_id ,status ,create_date,user_id,value
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{taskId},#{status},#{createDate},#{userId},#{value}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">

		<if test="id != null ">
			AND id = #{id,jdbcType=BIGINT}
		</if>
	

		<if test="taskId != null ">
			AND task_id = #{taskId,jdbcType=BIGINT}
		</if>
	   
	   <if test="userId != null ">
			AND user_id = #{userId,jdbcType=BIGINT}
		</if>

		<if test="status != null ">
			AND status = #{status,jdbcType=INTEGER}
		</if>
	

		<if test="createDate != null ">
			AND create_date = #{createDate,jdbcType=TIMESTAMP}
		</if>
	<if test="value != null ">
			AND value = #{value,jdbcType=INTEGER}
		</if>
	
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null ">
			id = #{id,jdbcType=BIGINT},
		</if>
		<if test="taskId != null ">
			task_id = #{taskId,jdbcType=BIGINT},
		</if>
		<if test="userId != null ">
			user_id = #{userId,jdbcType=BIGINT},
		</if>
		<if test="status != null ">
			status = #{status,jdbcType=INTEGER},
		</if>
		<if test="createDate != null ">
			create_date = #{createDate,jdbcType=TIMESTAMP},
		</if>
			<if test="value != null ">
			value = #{value,jdbcType=INTEGER},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="TaskUserResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_TASK_USER
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="TaskUserResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_TASK_USER
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM T_TASK_USER
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.framework.loippi.entity.TaskUser">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT T_TASK_USER 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.framework.loippi.entity.TaskUser">
		UPDATE	T_TASK_USER
		<set>
			<include refid="set_column" />
		</set>
		
				<if test="id != null ">
				WHERE id = #{id,jdbcType=BIGINT}
		</if>
	
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM T_TASK_USER
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM T_TASK_USER
		WHERE	ID	IN
    	<foreach item="TaskUserId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{TaskUserId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="TaskUserResultMap">
		SELECT	<include refid="base_column" />
		FROM 	T_TASK_USER
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="TaskUserResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_TASK_USER
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>


       <!-- 分页查询-->
       <select id="findListByPage" resultMap="TaskUserResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_TASK_USER
		<where> 1=1
			<include refid="where_column" />
		</where>
					
	     <if test="order != null and order != ''">
		order by  ${order}
	     </if>
	     
		<if test="pageNumber != null  and pageSize !=null ">
			limit  #{pageNumber,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
	     </if>
			
		
	</select>
	
</mapper> 