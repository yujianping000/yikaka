<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.framework.loippi.dao.TcommentScopeDao">
	
	<resultMap id="TcommentScopeResultMap" type="com.framework.loippi.entity.TcommentScope">
		<id property="id" column="id"  />
		<result property="mix" column="mix" />
		<result property="max" column="max" />
		<result property="account" column="account" />
		<result property="uid" column="uid" />
		<result property="orgId" column="org_id" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 id ,mix ,max ,account ,uid,org_id
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{mix},#{max},#{account},#{uid},#{orgId}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">

		<if test="id != null ">
			AND id = #{id,jdbcType=BIGINT}
		</if>
	

		<if test="mix != null ">
			AND mix = #{mix,jdbcType=DECIMAL}
		</if>
	

		<if test="max != null ">
			AND max = #{max,jdbcType=DECIMAL}
		</if>
	

		<if test="account != null ">
			AND account = #{account,jdbcType=DECIMAL}
		</if>
	

		<if test="uid != null ">
			AND uid = #{uid,jdbcType=BIGINT}
		</if>
		
			<if test="orgId != null ">
			AND org_id = #{orgId,jdbcType=BIGINT}
		</if>
	
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null ">
			id = #{id,jdbcType=BIGINT},
		</if>
		<if test="mix != null ">
			mix = #{mix,jdbcType=DECIMAL},
		</if>
		<if test="max != null ">
			max = #{max,jdbcType=DECIMAL},
		</if>
		<if test="account != null ">
			account = #{account,jdbcType=DECIMAL},
		</if>
		<if test="uid != null ">
			uid = #{uid,jdbcType=BIGINT},
		</if>
			<if test="orgId != null ">
			  org_id = #{orgId,jdbcType=BIGINT}
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="TcommentScopeResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_TCOMMENT_SCOPE
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="TcommentScopeResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_TCOMMENT_SCOPE
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM T_TCOMMENT_SCOPE
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.framework.loippi.entity.TcommentScope">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT T_TCOMMENT_SCOPE 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.framework.loippi.entity.TcommentScope">
		UPDATE	T_TCOMMENT_SCOPE
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM T_TCOMMENT_SCOPE
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM T_TCOMMENT_SCOPE
		WHERE	ID	IN
    	<foreach item="TcommentScopeId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{TcommentScopeId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="TcommentScopeResultMap">
		SELECT	<include refid="base_column" />
		FROM 	T_TCOMMENT_SCOPE
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="TcommentScopeResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_TCOMMENT_SCOPE
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>


       <!-- 分页查询-->
       <select id="findListByPage" resultMap="TcommentScopeResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_TCOMMENT_SCOPE
		<where> 1=1
			<include refid="where_column" />
		</where>
					
	     <if test="order != null and order != ''">
		order by  ${order}
	     </if>
	     
		<if test="pageNumber != null  and pageSize !=null ">
			limit  #{pageNumber,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
	     </if>
			
		
	</select>
	
</mapper> 