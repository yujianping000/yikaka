<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.framework.loippi.dao.AccountViewDao">
	
	<resultMap id="AccountViewResultMap" type="com.framework.loippi.entity.AccountView">
		<result property="orgId" column="org_id" />
		<result property="account" column="account" />
		<result property="name" column="name" />
		<result property="serviceName" column="service_name" />
		<result property="servicePhone" column="service_phone" />
		<result property="fee" column="fee" />
		<result property="amountMoney" column="amount_money" />
			<result property="totalday" column="totalday" />
		
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 org_id ,account ,name ,service_name ,service_phone ,fee ,amount_money,totalday
	</sql>
	
	<sql id="base_value_column">
		 #{orgId},#{account},#{name},#{serviceName},#{servicePhone},#{fee},#{amountMoney},#{totalday}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">

		<if test="orgId != null ">
			AND org_id = #{orgId,jdbcType=BIGINT}
		</if>
	

		<if test="account != null ">
			AND account = #{account,jdbcType=VARCHAR}
		</if>
	

		<if test="name != null ">
			AND name = #{name,jdbcType=VARCHAR}
		</if>
	

		<if test="serviceName != null ">
			AND service_name = #{serviceName,jdbcType=VARCHAR}
		</if>
	

		<if test="servicePhone != null ">
			AND service_phone = #{servicePhone,jdbcType=VARCHAR}
		</if>
	

		<if test="fee != null ">
			AND fee = #{fee,jdbcType=DECIMAL}
		</if>
	

		<if test="amountMoney != null ">
			AND amount_money = #{amountMoney,jdbcType=DECIMAL}
		</if>
	
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="orgId != null ">
			org_id = #{orgId,jdbcType=BIGINT},
		</if>
		<if test="account != null ">
			account = #{account,jdbcType=VARCHAR},
		</if>
		<if test="name != null ">
			name = #{name,jdbcType=VARCHAR},
		</if>
		<if test="serviceName != null ">
			service_name = #{serviceName,jdbcType=VARCHAR},
		</if>
		<if test="servicePhone != null ">
			service_phone = #{servicePhone,jdbcType=VARCHAR},
		</if>
		<if test="fee != null ">
			fee = #{fee,jdbcType=DECIMAL},
		</if>
		<if test="amountMoney != null ">
			amount_money = #{amountMoney,jdbcType=DECIMAL},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="AccountViewResultMap">
		SELECT	<include refid="base_column" />
		FROM	KEEP_ACCOUNT_VIEW
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="AccountViewResultMap">
		SELECT	<include refid="base_column" />
		FROM	KEEP_ACCOUNT_VIEW
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM KEEP_ACCOUNT_VIEW
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.framework.loippi.entity.AccountView">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT KEEP_ACCOUNT_VIEW 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.framework.loippi.entity.AccountView">
		UPDATE	KEEP_ACCOUNT_VIEW
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM KEEP_ACCOUNT_VIEW
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM KEEP_ACCOUNT_VIEW
		WHERE	ID	IN
    	<foreach item="AccountViewId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{AccountViewId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="AccountViewResultMap">
		SELECT	<include refid="base_column" />
		FROM 	KEEP_ACCOUNT_VIEW
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="AccountViewResultMap">
		SELECT
		<include refid="base_column" />
		FROM KEEP_ACCOUNT_VIEW
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>


       <!-- 分页查询-->
       <select id="findListByPage" resultMap="AccountViewResultMap">
		SELECT
		<include refid="base_column" />
		FROM KEEP_ACCOUNT_VIEW
		<where> 1=1
			<include refid="where_column" />
		</where>
					
	     <if test="order != null and order != ''">
		order by  ${order}
	     </if>
	     
		<if test="pageNumber != null  and pageSize !=null ">
			limit  #{pageNumber,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
	     </if>
			
		
	</select>
		 <select id="seachDayaccount"  resultType="String">
		select FORMAT(IFNULL(SUM(`kea`.amount_money),0),1) AS `totalday` from `t_keep_accounts` `kea` where (to_days(`kea`.pay_time) = to_days(now())) and kea.org_id=#{orgId,jdbcType=BIGINT}
	</select>
</mapper> 